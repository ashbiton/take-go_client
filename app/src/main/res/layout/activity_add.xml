<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#dcefeb"
    tools:context="com.example.aviya.takeandgo2.controller.activity.AddActivity">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:id="@+id/clientInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Client Details"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="4dp"
            android:textSize="18dp"
            style="@style/TextViewCategoryStyle"/>
        <EditText
            android:id="@+id/editTextClientID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text=""
            android:ems="10"
            android:hint="Identification Number"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editTextClientName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="text"
            android:ems="10"
            android:hint="Name"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:id="@+id/editTextClientLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:inputType="text"
            android:ems="10"
            android:hint="Last Name"
            android:layout_marginBottom="4dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Info"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:textSize="18dp"
            style="@style/TextViewCategoryStyle"/>
        <EditText
            android:id="@+id/editTextClientPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:text=""
            android:ems="10"
            android:hint="Cellphone Number"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/editTextClientEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:text=""
            android:ems="10"
            android:hint="Email Address"
            android:layout_marginBottom="4dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Verification"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:textSize="18dp"
            style="@style/TextViewCategoryStyle"/>
        <EditText
            android:id="@+id/editTextClientCreditNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text=""
            android:ems="10"
            android:hint="Credit Card Number"
            android:layout_marginBottom="4dp" />


    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="n e x t"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:textSize="18dp"
        android:fontFamily="monospace"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/finalAddLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/clientUserNameText"
            android:hint="User Name"
            android:text=""
            android:layout_marginTop="60dp"
            android:fontFamily="casual"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"/>
        <EditText
            android:hint="Password"
            android:fontFamily="casual"
            android:text=""
            android:layout_gravity="center"
            android:id="@+id/clientPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="11"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:text="remember the user name and password!"
            android:textAlignment="center"
            android:textColor="#660029"
            android:textSize="16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="serif"
            android:text="they will be used to enter the app next time!"
            android:textAlignment="center"
            android:textColor="#660029"
            android:textSize="16dp" />

        <CheckBox
            android:visibility="gone"
        android:id="@+id/savePreferencesCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="save preferences"
        android:fontFamily="monospace"
        android:textColor="#505050"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="26dp"
        android:text="r e g i s t e r"
        android:textSize="18dp"
        android:fontFamily="monospace"
        android:background="@drawable/button"/>
    </LinearLayout>
</LinearLayout>
